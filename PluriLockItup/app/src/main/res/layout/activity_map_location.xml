<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cpsc319.team3.com.plurilockitup.activity.MapLocationActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </fragment>
    <TextView
        android:id="@+id/nearestBranchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map"
        android:layout_marginTop="30dp"
        android:text="@string/nearestLocationTitle"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/branchUBCLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nearestBranchTitle"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/ubcBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UBC"
            android:layout_weight="1.5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ubcTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00am-5:00pm"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/MetroBranchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/branchUBCLayout">
        <TextView
            android:id="@+id/metroBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MetroTown"/>
        <TextView
            android:id="@+id/metroTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8:30am-5:30pm"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vanBranchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MetroBranchLayout">
        <TextView
            android:id="@+id/vanBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Vancouver "/>
        <TextView
            android:id="@+id/vanTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8:30am-4:30pm"/>
    </LinearLayout>


</RelativeLayout>
